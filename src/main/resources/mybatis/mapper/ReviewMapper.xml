<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "mybatis-3-mapper.dtd">
<mapper namespace="com.xq.tmall.dao.ReviewMapper">
    <resultMap id="reviewMap" type="review">
        <id column="review_id" property="review_id"/>
        <result column="review_content" property="review_content"/>
        <result column="review_createDate" property="review_createDate"/>
        <association property="review_user" column="review_user_id">
            <id property="user_id" column="user_id"/>
        </association>
        <association property="review_product" column="review_product_id">
            <id property="product_id" column="product_id"/>
        </association>
    </resultMap>

    <insert id="insertOne" parameterType="review">
        INSERT review (review_id,review_content,review_createDate,review_user_id,review_product_id)
            VALUES (
            null,
            #{review.review_content},
            #{review.review_createDate},
            #{review.review_user_id},
            #{review.review_product_id})
    </insert>
    <update id="updateOne" parameterType="review">
        UPDATE review
        <set>
            <if test="review.review_content != null">review_content = #{review.review_content}</if>
            <if test="review.review_createDate != null">review_createDate = #{review.review_createDate}</if>
        </set>
        <where>
            review_id = #{review.review_id}
        </where>
    </update>
    <delete id="deleteList" parameterType="java.util.ArrayList">
        DELETE FROM review
        <where>
            review_id IN
            <foreach collection="review_id_list" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </delete>
    <select id="select" resultMap="reviewMap">
        SELECT review_id,review_content,review_createDate,review_user_id,review_product_id FROM review
        <if test="review != null">
            <where>
                <if test="review.review_content != null">review_content = #{review.review_content}</if>
            </where>
        </if>
        <if test="pageUtil != null">
            LIMIT #{pageUtil.index},#{pageUtil.count}
        </if>
    </select>
    <select id="selectByUserId" resultMap="reviewMap" parameterType="int">
        SELECT review_id,review_content,review_createDate,review_user_id,review_product_id FROM review
        <where>
            review_user_id = #{review.review_user.user_id}
        </where>
    </select>
    <select id="selectByProductId" resultMap="reviewMap" parameterType="int">
        SELECT review_id,review_content,review_createDate,review_user_id,review_product_id FROM review
        <where>
            review_product_id = #{review.review_product.product_id}
        </where>
    </select>
    <select id="selectOne" resultMap="reviewMap" parameterType="int">
        SELECT review_id,review_content,review_createDate,review_user_id,review_product_id FROM review
        <where>
            review_id = #{review_id}
        </where>
    </select>
    <select id="selectTotal" resultType="int" parameterType="review">
        SELECT COUNT(review_id) FROM review
        <if test="review != null">
            <where>
                <if test="review.review_content != null">review_content = #{review.review_content}</if>
            </where>
        </if>
    </select>
    <select id="selectTotalByUserId" resultType="int" parameterType="int">
        SELECT COUNT(review_id) FROM review
        <where>
            review_user_id = #{user_id}
        </where>
    </select>
    <select id="selectTotalByProductId" resultType="int" parameterType="int">
        SELECT COUNT(review_id) FROM review
        <where>
            review_product_id = #{product_id}
        </where>
    </select>
</mapper>